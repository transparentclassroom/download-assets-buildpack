#!/bin/sh
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
set -x

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_DIR="$(dirname $(dirname $0))"

AWS_DIR=$CACHE_DIR/awscli

export_env_dir() {
  env_dir=$1
  whitelist_regex=${2:-'^(AMAZON_.+)$'}
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

export_env_dir $3

if [ -d $AWS_DIR ]; then
  echo "AWS CLI found in cache"
else
  $BUILDPACK_DIR/bin/install_awscli $AWS_DIR
fi

export PATH=$AWS_DIR/bin:$PATH

echo "---------> Copying files down from S3"

aws s3 cp s3://build.transparentclassroom.com/builds/BUILD_NUMBER $BUILD_DIR/BUILD_NUMBER

echo "about to aws s3 sync s3://build.transparentclassroom.com/builds/`cat $BUILD_DIR/BUILD_NUMBER`/webpack $BUILD_DIR/public/webpack"
aws s3 sync s3://build.transparentclassroom.com/builds/`cat $BUILD_DIR/BUILD_NUMBER`/webpack $BUILD_DIR/public/webpack
